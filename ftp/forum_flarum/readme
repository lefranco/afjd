(if already attempted)

docker compose down

sudo rm -rf ./mariadb/*
sudo rm -fr ./flarum/*

(start)

docker compose up -d

(installation after first start)

docker exec -it  flarum_app sh
docker>rm empty
docker>exit

docker exec flarum_app composer create-project flarum/flarum . --stability=stable

docker exec -it  flarum_app sh
docker>chown -R www-data:www-data /var/www/html/flarum
docker>exit

docker compose restart flarum_app flarum_nginx

aller sur le site du forum

ENTRER:
FORUM_TITLE : "Forum du site Diplomania"
DATABASE HOST : mariadb
MYSQL_NAME : flarum_db
MYSQL_USER : flarum_user
MYSQL_PASS : flarum_password
PREFIX : flarum_
ADMIN_USER : admin
ADMIN_EMAIL : postmaster@diplomania2.fr
ADMIN_PASS : superrootpassword
BASE URL : https://forum.diplomania2.fr


(install extension)

docker exec -it flarum bash
cd /flarum
composer require fof/<extension>
php flarum admin:enable fof-<extension>
php flarum cache:clear
docker restart flarum  (if change does not seem to work)

