
docker compose build --no-cache
approx. 3 minutes

docker compose up -d

# watch the logs before connecting...
docker compose logs -f nodebb

# wait for "web installer listening"

docker exec nodebb /usr/src/app/nodebb stop
docker exec nodebb /usr/src/app/nodebb build

docker compose down
docker compose up -d

